# vim: filetype=neomuttrc

set mailcap_path = $HOME/.config/mutt/mailcap
set sort = reverse-date
set sort_aux = date-received

source /usr/share/mutt-wizard/mutt-wizard.muttrc # mw-autogenerated

macro index \Cf "<enter-command>unset wait_key<enter><shell-escape>x=$(notmuchsearch); echo \"$x\" >~/.cache/mutt_terms<enter><limit>~i \"\`notmuch search --output=messages \$(cat ~/.cache/mutt_terms) | head -n 600 | perl -le '@a=<>;chomp@a;s/\^id:// for@a;$,=\"|\";print@a'\`\"<enter>" "show only messages matching a notmuch pattern"
set editor="nvim +':set textwidth=0' +'set wrapmargin=0' +':set wrap'" # Prevent mutt from using the stupid textwidth and textwrap settings.
set sidebar_visible = no # noe drit

source /home/otislevoll/.config/mutt/accounts/1-ovetislevoll-gmail.muttrc # mw-autogenerated
macro index,pager i1 '<sync-mailbox><enter-command>source /home/otislevoll/.config/mutt/accounts/1-ovetislevoll-gmail.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to ove.tislevoll@gmail.com" # mw-autogenerated
